<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/breakfastImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfastTextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Image of breakfast pancake"
        android:scaleType="centerCrop"
        android:src="@drawable/_image01"
        tools:ignore="HardcodedText,ImageContrastCheck"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/breakfastImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfastTextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Image of breakfast sandwich"
        android:scaleType="centerCrop"
        android:src="@drawable/_image02"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="253dp"
        tools:ignore="DuplicateIds,HardcodedText" />

    <ImageView
        android:id="@+id/breakfastImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfastTextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Image of breakfast eggs"
        android:scaleType="centerCrop"
        android:src="@drawable/_image03"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="499dp"
        tools:ignore="DuplicateIds,HardcodedText,UnknownId,UnknownIdInLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
